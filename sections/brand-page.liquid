<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<!-- Stylesheets for different pages -->
<link rel="stylesheet" href="{{ 'page-brand.css' | asset_url }}" media="print" onload="this.media='all'">

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="brand-page section-{{ section.id }}-padding">
  <div class="page-width__banner" style="background-image: url('{{ section.settings.banner_background | img_url: 'master' }}')">
    <div class="page-width__banner-text">
      <div class="main-page-title__content">
        <h1 class="main-page-title__first-word">{{ section.settings.banner_title_first_word }}</h1>
        <h1 class="main-page-title page-title">{{ page.title | escape }}</h1>           
      </div>
      <div class="main-page-subtitle__content">
        <h3 class="main-page-subtitle">{{ section.settings.banner_subtitle }}</h3>
      </div>
    </div>
  </div>

  <div class="brand-page">
    <div class="brand-page__content-mobile">
      <div class="content-mobile__item" id="item_1">
        <img src="{{ section.settings.item_1_image | img_url: 'medium' }}" alt="item_1_img" loading="lazy">
      </div>
      <div class="content-mobile__item content-text__container" id="item_2">
        <h4 class="content-text__container-title">{{ section.settings.item_2_title }}</h4>
        <h5 class="content-text__container-subtitle">{{ section.settings.item_2_subtitle }}</h5>
        <p class="content-text__container-description">{{ section.settings.item_2_description }}</p>
      </div>
      <div class="content-mobile__item" id="item_3">
        <img src="{{ section.settings.item_3_image | img_url: 'medium' }}" alt="item_3_img" loading="lazy">        
      </div>
      <div class="content-mobile__item content-text__container" id="item_4">
        <h4 class="content-text__container-title">{{ section.settings.item_4_title }}</h4>
        <h5 class="content-text__container-subtitle">{{ section.settings.item_4_subtitle }}</h5>
        <p class="content-text__container-description">{{ section.settings.item_4_description }}</p>
      </div>
      <div class="content-mobile__item" id="item_5">
        <img src="{{ section.settings.item_5_image | img_url: 'medium' }}" alt="item_5_img" loading="lazy">  
      </div>
      <div class="content-mobile__item content-text__container" id="item_6">
        <h4 class="content-text__container-title">{{ section.settings.item_6_title }}</h4>
        <h5 class="content-text__container-subtitle">{{ section.settings.item_6_subtitle }}</h5>
        <p class="content-text__container-description">{{ section.settings.item_6_description }}</p>
      </div>
      <div class="content-mobile__item" id="item_7">
        <img src="{{ section.settings.item_7_logo_1 | img_url: 'medium' }}" alt="item_7_logo_1" loading="lazy"> 
        <img src="{{ section.settings.item_7_logo_2 | img_url: 'medium' }}" alt="item_7_logo_2" loading="lazy"> 
        <img src="{{ section.settings.item_7_logo_3 | img_url: 'medium' }}" alt="item_7_logo_3" loading="lazy"> 
      </div>
    </div>





    <div class="brand-page__content-desktop"></div>
  </div>
</div>

