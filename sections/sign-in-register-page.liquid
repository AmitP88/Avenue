<link rel="stylesheet" href="{{ 'page-sign-in-register.css' | asset_url }}" media="print" onload="this.media='all'">

<div class="sign-in-register-page section-{{ section.id }}-padding">
  <div class="page-width__banner" style="background-image: url('{{ section.settings.banner_background | img_url: 'master' }}')">
    <div class="page-width__banner-text">
      <div class="main-page-title__content">
        <h1 class="main-page-title__first-word">{{ section.settings.banner_title_first_word }}</h1>
        <h1 class="main-page-title page-title">{{ section.settings.banner_title_rest }}</h1>           
      </div>
      <div class="main-page-subtitle__content">
        <h3 class="main-page-subtitle">{{ section.settings.banner_subtitle }}</h3>
      </div>
    </div>
  </div>

  <div class="sign-in-register-page__content">
    <div class="column sign-in">
      <div class="column__title">Sign In</div>
      
      <form>
        <input type="text" placeholder="Your Email..">
        <input type="text" placeholder="Your password..">          

        <div class="sign-in__button-forgot">
          <input type="button" value="SIGN IN">
          <p class="button-forgot">Forgot your Password &#8594</p>
        </div>

      </form>



    </div>



    <div class="column register">
      <div class="column__title">Register</div>
    </div>
  </div>



</div>

{% schema %}
  {
    "name": "Sign In / Register Page",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "image_picker",
        "id": "banner_background",
        "label": "Banner Background"
      },
      {
        "type": "text",
        "id": "banner_title_first_word",
        "label": "Banner Title - First Word"
      },
      {
        "type": "text",
        "id": "banner_title_rest",
        "label": "Banner Title - Rest of the Title"
      },
      {
        "type": "text",
        "id": "banner_subtitle",
        "label": "Banner Subtitle"
      }
    ]
  }
{% endschema %}